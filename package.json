{
  "name": "mf-hosting",
  "description" : "common hosting definitions",
  "pkg": {
    "abstract": true,
    "arch": [
      "aarch64"
    ],
    "depends": {
      "systemd": ">=250.3",
      "nginx-mainline": ">=1.21.4"
    },
    "nginx.sites.dir": "/etc/nginx/sites/common",
    "systemd.unit.dir": "/usr/lib/systemd/system",
    "systemd.unit.file": "${name}.service",
    "csp.endpoint": "/services/csp/upload",
    "installdir": "/services/${name}",
    "group": "services",
    "output" : {
      "arch" : {}
    }
  }
}
